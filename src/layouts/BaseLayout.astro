---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title = 'nanasi-apps.xyz ブログ', summary } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head prefix="og: http://ogp.me/ns#">
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:description" content={summary ?? 'nanasi-apps.xyz ブログへようこそ！'} />
    <meta property="og:site_name" content="nanasi-apps.xyz" />
    <meta property="og:type" content={summary ? 'blog' : 'top'} />
    <meta property="og:title" content={title} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <Header />

      <main class="py-8">
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
